<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.isdev.ssh.bean.Student" table="student" schema="test">
        <id name="stuId">
            <column name="stuId" sql-type="int(11)"/>
        </id>
        <property name="stuName">
            <column name="stuName" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>